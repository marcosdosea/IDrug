@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>Já possuo Cadastro</h1>
<div class="row">
    <div class="col-md-6">
        <div class="col-md-8">
            <section>
                <form id="account" method="post">
                    <h4>Faça o login.</h4>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary h-75">Faça seu login</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar comfirmação por email</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
    <div class="col-md-6">
        <div class="col-md-8 bg-light text-center" style="height: 320px;">
            <section>
                <h4>Não possue cadastro?</h4>
                <img class="w-50 mt-4" style="font-family: Brush Script MT, Brush Script Std, cursive" src="~/assets/img/logo01.jpg" />
                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Identity/Account/Register'">Cadastre-se</button>
